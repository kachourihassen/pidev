{% extends is_granted('ROLE_ADMIN')
    ? 'base.html.twig'
    : 'ense.html.twig' %}
{% block body %}
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="x-ua-compatible" content="ie=edge">

    <title>AdminLTE 3 | Starter</title>

    <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="{{ asset('plugins/fontawesome-free/css/all.min.css') }}">
    <!-- Theme style -->
    <link rel="stylesheet" href="{{ asset('dist/css/adminlte.min.css') }}">
    <!-- Google Font: Source Sans Pro -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
</head>
<body class="hold-transition sidebar-mini">
<div class="wrapper">








    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1>Ressources Humaines</h1>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="#">Dashboard</a></li>
                            <li class="breadcrumb-item active">Demande d'inscription</li>
                        </ol>
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>

        <!-- Main content -->
        <section class="content">

            <!-- Default box -->
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Demande d'inscriptions</h3>

                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                            <i class="fas fa-minus"></i></button>
                        <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                            <i class="fas fa-times"></i></button>
                    </div>
                </div>
                <div class="card-body p-0">
                    <table class="table table-striped projects">
                        <thead>
                        <tr>
                            <th style="width: 1%">
                                #
                            </th>
                            <th style="width: 20%">
                                Parent
                            </th>
                            <th style="width: 30%">
                                Enfants
                            </th>

                            <th style="width: 8%" class="text-center">
                                Status
                            </th>
                            <th style="width: 20%">

                            </th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for insc in inscriptions %}
                        <tr>
                            <td>
                                #
                            </td>
                            <td>
                                <a>
                                    <a data-toggle="modal" data-target="#exampleModalLong{{ insc.parent.id }}" >{{ insc.parent  }}</a>
                                </a>
                                <br/>
                                <small>
                                    {{ insc.date | date('j. F Y H:m')  }}
                                </small>
                                <div class="modal fade" id="exampleModalLong{{ insc.parent.id }}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
                                    <div class="modal-dialog" role="document">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="exampleModalLongTitle">Parent</h5>
                                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                    <span aria-hidden="true">&times;</span>
                                                </button>
                                            </div>
                                            <div class="modal-body">
                                                <div class="card card-primary card-outline">
                                                    <div class="card-body box-profile">
                                                        <div class="text-center">
                                                            <img class="profile-user-img img-fluid img-circle"
                                                                 src="/dist/img/user4-128x128.jpg"
                                                                 alt="User profile picture">
                                                        </div>

                                                        <h3 class="profile-username text-center">{{ insc.parent }}</h3>

                                                        <p class="text-muted text-center">Software Engineer</p>

                                                        <ul class="list-group list-group-unbordered mb-3">
                                                            <li class="list-group-item">
                                                                <b>Email</b> <a class="float-right">{{ insc.parent.email }}</a>
                                                            </li>
                                                            <li class="list-group-item">
                                                                <b>Date de naissance</b> <a class="float-right">{{ insc.parent.dateNaissance | date('j. F Y')}}</a>
                                                            </li>
                                                            <li class="list-group-item">
                                                                <b>Phone</b> <a class="float-right">{{ insc.parent.tel }}</a>
                                                            </li>
                                                            <li class="list-group-item">
                                                                <b>Adress</b> <a class="float-right">{{ insc.parent.adresse }}</a>
                                                            </li>

                                                        </ul>

                                                    </div>

                                                </div>
                                                <!-- /.card -->
                                            </div>

                                            <div class="modal-footer">

                                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <ul class="list-inline">
                                    {% for enf in insc.parent.enfants %}
                                    <li class="list-inline-item">
                                        <a data-toggle="modal" data-target="#exampleModalLongf{{ enf.id }}">{{ enf.nom }} </a>
                                        <div class="modal fade" id="exampleModalLongf{{ enf.id }}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
                                            <div class="modal-dialog" role="document">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title" id="exampleModalLongTitle">Parent</h5>
                                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                            <span aria-hidden="true">&times;</span>
                                                        </button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <div class="card card-primary card-outline">
                                                            <div class="card-body box-profile">
                                                                <div class="text-center">
                                                                    <img class="profile-user-img img-fluid img-circle"
                                                                         src="/dist/img/user4-128x128.jpg"
                                                                         alt="User profile picture">
                                                                </div>

                                                                <h3 class="profile-username text-center">{{ enf }}</h3>
                                                                <ul class="list-group list-group-unbordered mb-3">
                                                                    <li class="list-group-item">
                                                                        <b>Date de naissance</b> <a class="float-right">{{ enf.dateNaissance | date('j. F Y')}}</a>
                                                                    </li>
                                                                    <li class="list-group-item">
                                                                        <b>Sexe</b> <a class="float-right">{{ enf.sexe }}</a>
                                                                    </li>
                                                                </ul>
                                                            </div>
                                                            <!-- /.card-body -->
                                                        </div>
                                                        <!-- /.card -->
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </li>

                                    {% endfor %}
                                </ul>
                            </td>

                            <td class="project-state">
                                {% if insc.status == 'validee' %}
                                    <span class="badge badge-success">Success</span>
                                {% endif %}
                                {% if insc.status == 'en attente' %}
                                    <span class="badge badge-secondary">en attente</span>
                                {% endif %}
                                {% if insc.status == 'refusée' %}
                                    <span class="badge badge-danger">refusée</span>
                                {% endif %}
                                {% if insc.status == 'non traitee' %}
                                    <span class="badge badge-warning">non traitée</span>
                                {% endif %}

                            </td>
                            <td class="project-actions text-right">
                                {% if insc.status != "en attente" and insc.status != "validee" and insc.status != 'refusée' %}
                                <a class="btn btn-secondary btn-sm" href="{{ path('preinscription_attendre', {'id':insc.id }) }}">
                                    Attendre
                                </a>
                                {% endif %}
                                {% if insc.status != "validee" and insc.status != 'refusée' %}
                                    <a class="btn btn-success text-white btn-sm"  data-toggle="modal" data-target="#exampleModalLongaccept{{ insc.parent.id }}"> Accepter</a>
                                {% endif %}

                                {% if insc.status != 'refusée' and insc.status != "validee"  %}
                                <a class="btn btn-danger btn-sm" href="{{ path('preinscription_refuser', {'id':insc.id }) }}">
                                    Refuser
                                </a>
                                {% endif %}
                                <div class="modal fade" id="exampleModalLongaccept{{ insc.parent.id }}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
                                    <div class="modal-dialog modal-lg" role="document">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="exampleModalLongTitle">Affecter Enfants</h5>
                                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                    <span aria-hidden="true">&times;</span>
                                                </button>
                                            </div>
                                            <div class="modal-body">
                                                <form method="post">
                                                {% for enf in insc.parent.enfants %}
                                                <div class="card card-primary card-outline">
                                                    <div class="card-body box-profile">
                                                        <div class="text-center">
                                                            <img class="profile-user-img img-fluid img-circle"
                                                                 src="/dist/img/user4-128x128.jpg"
                                                                 alt="User profile picture">
                                                        </div>

                                                        <h3 class="profile-username text-center">{{ enf.nom }}</h3>
                                                        <ul class="list-group list-group-unbordered mb-3">
                                                            <li class="list-group-item">
                                                                <b class="float-left">Date de naissance</b><a class="float-right">{{ enf.dateNaissance | date('j. F Y')}}</a>
                                                            </li>
                                                            <li class="list-group-item">
                                                                <b class="float-left">Sexe</b><a class="float-right">{{ enf.sexe }}</a>
                                                            </li>
                                                            <li class="list-group-item">
                                                                <div class="form-group">
                                                                    <label class="float-left">Select Multiple</label>
                                                                    <select required name="enfClasse{{ enf.id }}" multiple class="form-control">
                                                                        {% for classe in classes %}
                                                                                <option  value="{{ classe.id }}">{{ classe }}</option>
                                                                        {% endfor %}
                                                                    </select>
                                                                </div>
                                                            </li>

                                                        </ul>
                                                    </div>
                                                </div>
                                                {% endfor %}
                                                <input type="text" hidden name="insc" value="{{ insc.id }}">

                                                    <input type="submit" class="btn btn-success btn-lg" value="Valider">
                                                </form>
                                                <!-- /.card -->
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </td>
                        </tr>
                        {% endfor %}
                        </tbody>
                    </table>

                </div>
                <div class="card-footer ">
                    <div class="pagination  " style="margin-left: 38%;"> {{ knp_pagination_render(inscriptions) }}</div>
                </div>

            </div>
            <!-- /.card -->

        </section>

        <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->
    <!-- Main Footer -->

</div>

<script src={{ asset('plugins/jquery/jquery.min.js') }} ></script>
<!-- Bootstrap 4 -->
<script src={{ asset('plugins/bootstrap/js/bootstrap.bundle.min.js') }}></script>
<!-- AdminLTE App -->
<script src={{  asset('dist/js/adminlte.min.js') }}></script>
</body>
</html>
{% endblock %}