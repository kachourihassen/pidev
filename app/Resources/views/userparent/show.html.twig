{% extends 'base.html.twig' %}

{% block body %}
    <h1>Userparent</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ userParent.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ userParent.nom }}</td>
            </tr>
            <tr>
                <th>Sexe</th>
                <td>{{ userParent.sexe }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ userParent.prenom }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ userParent.adresse }}</td>
            </tr>
            <tr>
                <th>Datedenaissance</th>
                <td>{% if userParent.dateDeNaissance %}{{ userParent.dateDeNaissance|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('userparent_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('userparent_edit', { 'id': userParent.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
