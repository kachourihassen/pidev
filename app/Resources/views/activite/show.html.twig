{% extends 'base.html.twig' %}

{% block body %}
    <h1>Activite</h1>

    <table class="table table-bordered">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ activite.id }}</td>
            </tr>
            <tr>
                <th>Categorie</th>
                <td>{{ activite.categorie }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ activite.nom }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ activite.prix }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ activite.description }}</td>
            </tr>
        </tbody>
    </table>

    <ul>

            <a class="btn btn-info" href="{{ path('activite_index') }}">Back to the list</a>


            <a  class="btn btn-warning" href="{{ path('activite_edit', { 'id': activite.id }) }}">Edit <i class="fas fa-pen"></i></a>


            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}

    </ul>
{% endblock %}
