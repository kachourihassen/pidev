
{% extends 'base.html.twig' %}

{% block body %}
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
    <!------ Include the above in your HEAD tag ---------->
    <script language="JavaScript" src="https://code.jquery.com/jquery-1.11.1.min.js" type="text/javascript"></script>
    <script language="JavaScript" src="https://cdn.datatables.net/1.10.4/js/jquery.dataTables.min.js" type="text/javascript"></script>
    <script language="JavaScript" src="https://cdn.datatables.net/plug-ins/3cfcc339e89/integration/bootstrap/3/dataTables.bootstrap.js" type="text/javascript"></script>



    <div class="card card-warning">
        <label class="card-header" >Plats list</label>
    </div>
    <div class="d-flex justify-content-center h-100">
        <form method="post">
            <div class="searchbar">
                <input class="search_input" type="text" name="name" placeholder="Search..." id="myInput">
                <a href="#" class="search_icon" value="recherche"><i class="fas fa-search"></i></a>
            </div></form></div>

    <table  class="table table-bordered" id="myTable">
        <thead>
        <tr   >
            <th >Id</th>
            <th>Nom</th>
            <th>Description</th>
            <th>Prix</th>


            <th>Actions</th>
        </tr>
        </thead>
        <tbody id="myTable">
        {% for plat in plats %}
            <tr>
                <td><a href="{{ path('plat_show', { 'id': plat.id }) }}">{{ plat.id }}</a></td>
                <td>{{ plat.nom }}</td>
                <td>{{ plat.description }}</td>
                <td>{{ plat.prix }}</td>



                <td>

                    <a class="btn btn-info" href="{{ path('plat_show', { 'id': plat.id }) }}"><i class="fas fa-eye"></i></a>

                    <a class="btn btn-warning" href="{{ path('plat_edit', { 'id': plat.id }) }}"><i class="fas fa-pen"></i></a>

                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>



    <div class="col-md-2">
        <div class="card-body pad table-responsive">
            <a class="btn btn-block btn-outline-secondary" href="{{ path('plat_new') }}">Create a new plat</a>
        </div>
    </div>


    <script>
        $(document).ready(function(){
            $("#myInput").on("keyup", function() {
                var value = $(this).val().toLowerCase();
                $("#myTable tr").filter(function() {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>
{% endblock %}

