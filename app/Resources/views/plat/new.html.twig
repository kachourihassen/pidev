{% extends 'base.html.twig' %}

{% block body %}
    <div class="card card-warning">
        <label class="card-header" >Ajouter un plat</label>
    </div>
    {% for message in app.flashes('info') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}

    {{ form_start(form) }}

    <div class="form-group">
        <label class="col-form-label" for="inputSuccess">Nom</label>
        {{ form_widget(form.nom,{'attr':{'class':'form-control'}} )}}
    </div>

    <div class="form-group">
        <label class="col-form-label" for="inputSuccess">Description</label>
        {{ form_widget(form.description,{'attr':{'class':'form-control'}} )}}
    </div>

    <div class="form-group">
        <label class="col-form-label" for="inputSuccess">Prix</label>
        {{ form_widget(form.prix,{'attr':{'class':'form-control'}} )}}
    </div>



    <div class="col-md-2">
        <div class="card-body pad table-responsive">
            {{ form_widget(form) }}
            <input type="submit" class="btn btn-block btn-outline-warning" value="Create" />
            {{ form_end(form) }}
        </div>
    </div>






    <div class="col-md-2">
        <div class="card-body pad table-responsive">
            <a  class="btn btn-block btn-outline-secondary" href="{{ path('plat_index') }}">Back to the list</a>
        </div>
    </div>

{% endblock %}