{% extends 'base.html.twig' %}

{% block body %}
    <div class="card card-warning">
        <label class="card-header" >Ajouter un CD </label>
    </div>

    {{ form_start(form) }}
    <div class="form-group">
        <label class="col-form-label" for="inputSuccess">Maison de production</label>
        {{ form_widget(form.maisonDeProd,{'attr':{'class':'form-control'}} )}}

    </div>
    <div class="form-group">
        <label class="col-form-label" for="inputSuccess">Titre</label>
        {{ form_widget(form.titre,{'attr':{'class':'form-control'}} )}}
    </div>

<div class="form-group">
    <label class="col-form-label" for="inputSuccess">Description</label>
    {{ form_widget(form.description,{'attr':{'class':'form-control'}} )}}
</div>

<div class="form-group">
    <label class="col-form-label" for="inputSuccess">Prix</label>
    {{ form_widget(form.prix,{'attr':{'class':'form-control'}} )}}
</div>

<div class="form-group">
    <label class="col-form-label" for="inputSuccess">langue</label>
    {{ form_widget(form.langue,{'attr':{'class':'form-control'}} )}}
</div>

<div class="form-group">
    <label class="col-form-label" for="inputSuccess">Date Publication</label>
    <div class="input-group">
        <div class="input-group-prepend">
            <span class="input-group-text"><i class="far fa-clock"></i></span>
        </div>  {{ form_widget(form.datePub,{'attr':{'class':'form-control float-right'}} )}}
        <input type="text" class="form-control float-right" id="reservationtime">
    </div>
</div>



    <div class="col-md-2">
        <div class="card-body pad table-responsive">
            {{ form_widget(form) }}
            <input type="submit" class="btn btn-block btn-outline-warning" value="Ajouter CD / DVD " />
            {{ form_end(form) }}
        </div>
    </div>







    <div class="col-md-2">
        <div class="card-body pad table-responsive">
            <a  class="btn btn-block btn-outline-secondary" href="{{ path('cd_index') }}">Consulter liste</a>
        </div>
    </div>
{% endblock %}