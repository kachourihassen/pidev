{% extends 'base.html.twig' %}

{% block body %}

    <div class="card card-warning">
        <label class="card-header" >Plat </label>
    </div>

    <table class="table table-bordered">
        <tbody>
        <tr>
            <th style="width:9px">Id</th>
            <td>{{ repa.id }}</td>
        </tr>
        <tr>
            <th>Nom</th>
            <td>{{ repa.nom }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ repa.description }}</td>
        </tr>
        <tr>
            <th>Prix</th>
            <td>{{ repa.prix }}</td>
        </tr>
        <tr>
            <th>Heure</th>
            <td>{% if repa.heure %}{{ repa.heure|date('Y-m-d H:i:s') }}{% endif %}</td>
        </tr>



        </tbody>
    </table>

    <ul>
        <div class="col-md-2">
            <div class="card-body pad table-responsive">
                <a  class="btn btn-block btn-outline-secondary" href="{{ path('repas_index') }}">Back to the list</a>
            </div>
        </div>

        <a class="btn btn-warning" href="{{ path('repas_edit', { 'id': repa.id }) }}"><i class="fas fa-pen"></i></a>

        <div class="col-md-2">
            <div class="card-body pad table-responsive">
                {{ form_start(delete_form) }}
                <input type="submit" class="btn btn-block btn-outline-danger" class="fas fa-trash" value="Delete" />
                {{ form_end(delete_form) }}
            </div>
        </div>

    </ul>
{% endblock %}