{% extends 'base.html.twig' %}

{% block body %}
    <div class="card card-warning">
        <label class="card-header" >Repas Edit</label>
    </div>

    {{ form_start(edit_form) }}
    <div class="form-group">
        <label class="col-form-label" for="inputSuccess">Nom</label>
        {{ form_widget(edit_form.nom,{'attr':{'class':'form-control'}} )}}
    </div>
    <div class="form-group">
        <label class="col-form-label" for="inputSuccess">Description</label>
        {{ form_widget(edit_form.description,{'attr':{'class':'form-control'}} )}}
    </div>

    <div class="form-group">
        <label class="col-form-label" for="inputSuccess">Prix</label>
        {{ form_widget(edit_form.prix,{'attr':{'class':'form-control'}} )}}
    </div>


    <div class="form-group">
        <label class="col-form-label" for="inputSuccess">Date </label>
        <div class="input-group">
            <div class="input-group-prepend">
                <span class="input-group-text"><i class="far fa-clock"></i></span>
            </div>
            {{ form_widget(edit_form.heure,{'attr':{'class':'form-control float-right'}} )}}
            <input type="text" class="form-control float-right" >
        </div>
    </div>




    {{ form_widget(edit_form) }}
    <input type="submit" value="Edit"  class="btn btn-warning" class="fas fa-eye"/>
    {{ form_end(edit_form) }}


    <div class="col-md-2">
        <div class="card-body pad table-responsive">
            <a  class="btn btn-block btn-outline-secondary" href="{{ path('repas_index') }}">Back to the list</a>
        </div>
    </div>
    <div class="col-md-2">
        <div class="card-body pad table-responsive">
            {{ form_start(delete_form) }}
            <input type="submit" class="btn btn-block btn-outline-danger" class="fas fa-trash" value="Delete" />
            {{ form_end(delete_form) }}
        </div>
    </div>

{% endblock %}