{% extends 'base.html.twig' %}
{% block body %}
    <div class="card card-warning">
        <label class="card-header" >liste de tous les bandes désinée</label>
    </div>
    <table class="table table-bordered">
        <thead>
        <tr>
            <th>Auteur</th>
            <th>Id</th>
            <th>Titre</th>
            <th>Description</th>
            <th>Langue</th>
            <th>Prix</th>
            <th>Datepub</th>
            <th>Image</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for bd in bds %}
            <tr>
                <td><a href="{{ path('bd_show', { 'id': bd.id }) }}">{{ bd.auteur }}</a></td>
                <td>{{ bd.id }}</td>
                <td>{{ bd.titre }}</td>
                <td>{{ bd.description }}</td>
                <td>{{ bd.langue }}</td>
                <td>{{ bd.prix }}</td>
                <td>{% if bd.datePub %}{{ bd.datePub|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td class="patient-img sorting_1" style=" width: 10px; height: 10px">
                    <img src="{{ asset('/images/') }}{{ bd.path }}"  style=" width: 40px; height: 40px" alt="">
                </td>
                <td>
                    <a class="btn btn-info" href="{{ path('bd_show', { 'id': bd.id }) }}"><i class="fas fa-eye"></i></a>
                    <a class="btn btn-warning" href="{{ path('bd_edit', { 'id': bd.id }) }}"><i class="fas fa-pen"></i></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <ul>
        <li>
            <a href="{{ path('bd_new') }}">Ajouter un bande dessinée</a>
        </li>
    </ul>
{% endblock %}