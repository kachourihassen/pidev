{% extends 'base.html.twig' %}

{% block body %}
    <div class="card card-warning">
        <label class="card-header" >modifier liste</label>
    </div>

    {{ form_start(edit_form) }}
    <div class="form-group">
        <label class="col-form-label" for="inputSuccess">Titre</label>
        {{ form_widget(edit_form.titre,{'attr':{'class':'form-control'}} )}}
    </div>
    <div class="form-group">
        <label class="col-form-label" for="inputSuccess">Description</label>
        {{ form_widget(edit_form.description,{'attr':{'class':'form-control'}} )}}
    </div>

    <div class="form-group">
        <label class="col-form-label" for="inputSuccess">Prix</label>
        {{ form_widget(edit_form.prix,{'attr':{'class':'form-control'}} )}}
    </div>

    <div class="form-group">
        <label class="col-form-label" for="inputSuccess">Auteur</label>
        {{ form_widget(edit_form.auteur,{'attr':{'class':'form-control'}} )}}
    </div>
    <div class="form-group">
        <label class="col-form-label" for="inputSuccess">Date Publication</label>
        <div class="input-group">
            <div class="input-group-prepend">
                <span class="input-group-text"><i class="far fa-clock"></i></span>
            </div>
            {{ form_widget(edit_form.datePub,{'attr':{'class':'form-control float-right'}} )}}
            <input type="text" class="form-control float-right" id="reservationtime">
        </div>
    </div>




    {{ form_widget(edit_form) }}
    <input type="submit" value="Edit"  class="btn btn-warning" class="fas fa-eye"/>
    {{ form_end(edit_form) }}


    <div class="col-md-2">
        <div class="card-body pad table-responsive">
            <a  class="btn btn-block btn-outline-secondary" href="{{ path('livre_index') }}">Back to the list</a>
        </div>
    </div>
    <div class="col-md-2">
        <div class="card-body pad table-responsive">
            {{ form_start(delete_form) }}
            <input type="submit" class="btn btn-block btn-outline-danger" class="fas fa-trash" value="Supprimer" />
            {{ form_end(delete_form) }}
        </div>
    </div>

{% endblock %}
