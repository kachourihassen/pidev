{% extends is_granted('ROLE_ADMIN')
    ? 'base.html.twig'
    : 'ense.html.twig' %}
{% block body %}
    <div class="card card-warning">
        <label class="card-header" >Edit une reclamation</label>
    </div>

    {{ form_start(edit_form) }}

    <div class="form-group">
        <label class="col-form-label" for="inputSuccess">Titre</label>
        {{ form_widget(edit_form.titre,{'attr':{'class':'form-control'}} )}}
    </div>

    <div class="form-group">
        <label class="col-form-label" for="inputSuccess">Description</label>
        {{ form_widget(edit_form.description,{'attr':{'class':'form-control'}} )}}
    </div>

    {#<div class="form-group">
        <label class="col-form-label" for="inputSuccess">Status</label>
        {{ form_widget(edit_form.status,{'attr':{'class':'form-control'}} )}}
    </div>#}
    {#<div class="form-group">
        <label class="col-form-label" for="inputSuccess">Reponse</label>
        {{ form_widget(edit_form.reponse,{'attr':{'class':'form-control'}} )}}
    </div>#}

    {{ form_widget(edit_form) }}
    <input type="submit" value="Edit"  class="btn btn-warning" class="fas fa-eye"/>
    {{ form_end(edit_form) }}


    <div class="col-md-2">
        <div class="card-body pad table-responsive">
            <a  class="btn btn-block btn-outline-secondary" href="{{ path('reclamation_index') }}">Back to the list</a>
        </div>
    </div>
    <div class="col-md-2">
        <div class="card-body pad table-responsive">
            {{ form_start(delete_form) }}
            <input type="submit" class="btn btn-block btn-outline-danger" class="fas fa-trash" value="Delete" />
            {{ form_end(delete_form) }}
        </div>
    </div>
{% endblock %}
